<% layout('layout') %>

<div class="container">
  <div class="row">
    <div class="col-12">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">UUID</th>
            <th scope="col">Product ID</th>
            <th scope="col">Product Name</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% beacons.forEach((beacon) => { %>
            <tr>
              <td><%= beacon.uuid %></td>
              <td><%= beacon.product_id %></td>
              <td><%= beacon.product_name %></td>
              <td><a href="/beacons/edit/<%= beacon._id %>" class="btn btn-success">edit</a></td>
              <td>
                <button class="btn btn-danger" onclick="delBeacon('<%= beacon._id %>')">delete</button>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-2">
      <a href="/beacons/create" class="btn btn-success">create beacon</a>
    </div>
    <div clas="col-2">
      <a href="/" class="btn btn-primary">home</a>
    </div>
  </div>
</div>

<script>
  function delBeacon(id) {
    $.ajax({
      url: '/beacons/destroy/' + id,
      type: 'DELETE',
      success: () => {
        location.reload()
      }
    })
  }
</script>

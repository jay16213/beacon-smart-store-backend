<% layout('layout') %>

<div class="container">
  <div class="row">
    <div class="col-12">
      <form method="POST" action="/beacon/edit/<%= beacon._id %>">

        <div class="form-group">
          <label>UUID</label>
          <input type="text" name="uuid" class="form-control" value="<%= beacon.uuid %>">
        </div>

        <div class="form-group">
          <label>Product id</label>
          <input type="text" name="product_id" class="form-control" value="<%= beacon.product_id %>">
        </div>

        <div class="form-group">
          <label>Product name</label>
          <input type="text" name="product_name" class="form-control" value="<%= beacon.product_name %>">
        </div>

        <div class="form-group">
          <input type="submit" value="submit" class="form-control btn btn-primary">
        </div>
      </form>
    </div>
  </div>
</div>
